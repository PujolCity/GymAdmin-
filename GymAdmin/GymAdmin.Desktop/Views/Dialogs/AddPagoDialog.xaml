<UserControl x:Class="GymAdmin.Desktop.Views.Dialogs.AddPagoDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GymAdmin.Desktop.Views.Dialogs"
             xmlns:converter="clr-namespace:GymAdmin.Desktop.Converters"
             xmlns:b="clr-namespace:GymAdmin.Desktop.Views.Behaviors"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"             
             Background="Transparent"
             d:DesignHeight="570" d:DesignWidth="750">

    <Border Background="{StaticResource BackgroundWhiteBrush}"
            CornerRadius="8" Padding="20"
            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
            Effect="{StaticResource DialogShadowEffect}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Form -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <TextBlock Grid.Row="0" Text="{Binding Titulo}"
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

            <!-- FORM -->
            <Grid Grid.Row="1" Grid.IsSharedSizeScope="True" SnapsToDevicePixels="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- fila 1 -->
                    <RowDefinition Height="Auto"/>
                    <!-- fila 2 -->
                    <RowDefinition Height="Auto"/>
                    <!-- Observaciones -->
                    <RowDefinition Height="Auto"/>
                    <!-- Error -->
                </Grid.RowDefinitions>

                <!-- SOCIO (ocupa 2 columnas) -->
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- etiqueta -->
                        <RowDefinition Height="Auto"/>
                        <!-- búsqueda -->
                        <RowDefinition Height="Auto"/>
                        <!-- nombre + valor -->
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Socio*" />

                    <!-- Caja de búsqueda -->
                    <TextBox x:Name="SocioSearchBox"
                             Grid.Row="1" Grid.Column="0"
                             Text="{Binding SocioBusqueda, UpdateSourceTrigger=PropertyChanged}"
                             Tag="Buscar socio por DNI o nombre…"
                             Style="{StaticResource SearchTextBoxStyle}"
                             HorizontalAlignment="Stretch"
                             MinWidth="240"
                             Margin="0,4,0,0"
                             TextChanged="SocioSearchBox_TextChanged" />

                    <!-- Botón limpiar a la derecha -->
                    <Button Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"
                            Content="Limpiar"
                            Command="{Binding LimpiarSocioCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="100" Height="28"
                            Margin="12,6,0,0"
                            VerticalAlignment="Top" />

                    <!-- Popup con sugerencias -->
                    <Popup x:Name="SocioPopup"
                           PlacementTarget="{Binding ElementName=SocioSearchBox}"
                           Placement="Bottom"
                           StaysOpen="False"
                           AllowsTransparency="True"
                           Focusable="False">
                        <Border Background="{StaticResource BackgroundWhiteBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1" CornerRadius="6" Padding="4"
                                Width="{Binding ElementName=SocioSearchBox, Path=ActualWidth}">
                            <ScrollViewer MaxHeight="260">
                                <ListBox x:Name="SocioListBox"
                                         ItemsSource="{Binding SociosSugeridos}"
                                         SelectedItem="{Binding SocioSeleccionado, Mode=TwoWay}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical" Margin="6,4">
                                                <TextBlock Text="{Binding NombreCompleto}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Dni, StringFormat=DNI {0}}"
                                                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </Border>
                    </Popup>

                    <!-- Estado seleccionado -->
                    <Grid Grid.Row="2" Grid.Column="0" Margin="0,6,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Nombre:"
                                   Foreground="{StaticResource TextSecondaryBrush}" />
                        <TextBlock Grid.Row="1"
                                   FontWeight="SemiBold"
                                   Text="{Binding SocioSeleccionado.NombreCompleto,
                                                  TargetNullValue=(sin seleccionar),
                                                  FallbackValue=(sin seleccionar)}"
                                   TextTrimming="CharacterEllipsis" />
                    </Grid>
                </Grid>

                <!-- PLAN -->
                <Grid Grid.Row="0" Grid.Column="2" Margin="0,0,12,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Plan*" />
                    <ComboBox Grid.Row="1"
                              ItemsSource="{Binding Planes}"
                              SelectedItem="{Binding PlanSeleccionado, Mode=TwoWay}"
                              IsTextSearchEnabled="True"
                              TextSearch.TextPath="Nombre"
                              Style="{StaticResource FilterComboBoxStyle}"
                              HorizontalAlignment="Stretch"
                              MinWidth="140">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Nombre}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <!-- CRÉDITOS -->
                <Grid Grid.Row="0" Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Créditos" />
                    <TextBox Grid.Row="1"
                             Text="{Binding CreditosAsignados}"
                             IsReadOnly="True"
                             Style="{StaticResource FormTextBoxStyle}"
                             HorizontalAlignment="Stretch"
                             MinWidth="120"/>
                </Grid>

                <!-- MÉTODO -->
                <Grid Grid.Row="1" Grid.Column="0" Margin="0,12,12,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Método de pago*" />
                    <ComboBox Grid.Row="1"
                              ItemsSource="{Binding MetodosPago}"
                              SelectedItem="{Binding MetodoSeleccionado, Mode=TwoWay}"
                              IsTextSearchEnabled="False"
                              Style="{StaticResource FilterComboBoxStyle}"
                              HorizontalAlignment="Stretch"
                              MinWidth="140">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Nombre}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <!-- PRECIO -->
                <Grid Grid.Row="1" Grid.Column="1" Margin="0,12,12,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Precio*" />
                    <TextBox Grid.Row="1"
                             x:Name="PrecioTextBox"
                             TextAlignment="Right"
                             Text="{Binding Precio, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                             Style="{StaticResource ValidatedTextBoxStyle}"
                             PreviewTextInput="PrecioTextBox_PreviewTextInput"
                             DataObject.Pasting="PrecioTextBox_OnPaste"
                             HorizontalAlignment="Stretch"
                             MinWidth="120"/>
                </Grid>

                <!-- FECHA PAGO -->
                <Grid Grid.Row="1" Grid.Column="2" Margin="0,12,12,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Fecha de pago*" />
                    <DatePicker Grid.Row="1"
                                SelectedDate="{Binding FechaPago}"
                                Style="{StaticResource FilterDatePickerStyle}"
                                HorizontalAlignment="Stretch">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </Grid>

                <!-- FECHA VENCIMIENTO -->
                <Grid Grid.Row="1" Grid.Column="3" Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Vence el*" />
                    <DatePicker Grid.Row="1"
                                SelectedDate="{Binding FechaVencimiento}"
                                Style="{StaticResource FilterDatePickerStyle}"
                                HorizontalAlignment="Stretch">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </Grid>

                <!-- OBSERVACIONES -->
                <Grid Grid.Row="2" Grid.ColumnSpan="4" Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Observaciones" />
                    <TextBox Grid.Row="1"
                             Text="{Binding Observaciones, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBoxStyle}"
                             AcceptsReturn="True" Height="80" TextWrapping="Wrap"
                             HorizontalAlignment="Stretch"/>
                </Grid>

                <!-- ERROR -->
                <TextBlock Grid.Row="3" Grid.ColumnSpan="4" Margin="0,10,0,0"
                           Foreground="{StaticResource ErrorBrush}"
                           Text="{Binding ErrorMessage}" />
            </Grid>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Cancelar"
                        Width="110" Height="32"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding CancelarCommand}"
                        IsCancel="True"/>
                <Button Content="Guardar"
                        Width="110" Height="32" Margin="8,0,0,0"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding GuardarCommand}"
                        IsEnabled="{Binding FormularioValido}"
                        IsDefault="True"/>
            </StackPanel>
        </Grid>
    </Border>

    <!-- Atajos de teclado (si está embebido en otro contenedor) -->
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding GuardarCommand}" />
        <KeyBinding Key="Escape" Command="{Binding CancelarCommand}" />
    </UserControl.InputBindings>
</UserControl>