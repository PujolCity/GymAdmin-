<UserControl x:Class="GymAdmin.Desktop.Views.Dialogs.AddSocioDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GymAdmin.Desktop.Views.Dialogs"
             xmlns:converter="clr-namespace:GymAdmin.Desktop.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="700">

    <Border Background="{StaticResource BackgroundWhiteBrush}"
          CornerRadius="8"
          Padding="20"
          BorderBrush="{StaticResource BorderBrush}"
          BorderThickness="1"
          Effect="{StaticResource DialogShadowEffect}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 20">
                <fa:IconImage Icon="UserPlus" Width="24" Height="24" Foreground="{StaticResource PrimaryBrush}"/>
                <TextBlock Text="Nuevo Socio" FontSize="18" FontWeight="Bold" Margin="10 0 0 0" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Formulario -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- DNI -->
                    <TextBlock Text="DNI*"/>
                    <TextBox x:Name="DniTextBox"
                   Text="{Binding Dni, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                   MaxLength="8"
                   PreviewTextInput="TextBox_PreviewTextInput"
                   DataObject.Pasting="TextBox_Pasting"
                   Style="{StaticResource ValidatedTextBoxStyle}"/>

                    <!-- Nombre -->
                    <TextBlock Text="Nombre*" Margin="0 15 0 0"/>
                    <TextBox x:Name="NombreTextBox"
                   Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                   PreviewTextInput="NombreTextBox_PreviewTextInput"
                   Style="{StaticResource ValidatedTextBoxStyle}"/>

                    <!-- Apellido -->
                    <TextBlock Text="Apellido*" Margin="0 15 0 0"/>
                    <TextBox x:Name="ApellidoTextBox"
                   Text="{Binding Apellido, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                   PreviewTextInput="NombreTextBox_PreviewTextInput"
                   Style="{StaticResource ValidatedTextBoxStyle}"/>

                    <!-- Telefono -->
                    <TextBlock Text="Telefono" Margin="0 15 0 0"/>
                    <TextBox x:Name="TelefonoTextBox"
                   Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                   PreviewTextInput="TelefonoTextBox_PreviewTextInput"
                   DataObject.Pasting="TextBox_Pasting"
                   Style="{StaticResource ValidatedTextBoxStyle}"/>

                </StackPanel>
            </ScrollViewer>

            <!-- Botones -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Cancelar" Width="80" Height="32"
                Style="{StaticResource SecondaryButtonStyle}"
                Command="{Binding CancelarCommand}"/>

                <Button Content="Guardar" Width="80" Height="32"
                Style="{StaticResource PrimaryButtonStyle}"
                Command="{Binding GuardarCommand}"
                Margin="10 0 0 0"/>
                <!-- Sin IsEnabled: lo maneja GuardarCommand.CanExecute -->
            </StackPanel>
        </Grid>
    </Border>
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding GuardarCommand}" />
        <KeyBinding Key="Escape" Command="{Binding CancelarCommand}" />
    </UserControl.InputBindings>
</UserControl>