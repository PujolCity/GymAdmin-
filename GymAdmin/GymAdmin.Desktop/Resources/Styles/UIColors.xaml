<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="PrimaryVeryLightColor">#FF6BA3CC</Color>
    <Color x:Key="PrimaryColor">#FF2D5C7F</Color>
    <Color x:Key="PrimaryMidColor">#FF1A3A5F</Color>
    <Color x:Key="PrimaryDarkColor">#FF07183F</Color>
    <Color x:Key="SecondaryColor">#E64C3C</Color>
    <Color x:Key="AccentColor">#42B883</Color>
   
    <!-- Colores neutros para fondos y texto -->
    <Color x:Key="LightColor">#F5F5F5</Color>
    <Color x:Key="DarkColor">#333333</Color>
    <Color x:Key="MidGrayColor">#9E9E9E</Color>
    <Color x:Key="WhiteColor">#FFFFFF</Color>

    <!-- Estados y notificaciones -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <!-- Éxito/activo -->
    <Color x:Key="WarningColor">#FFC107</Color>
    <!-- Advertencia/próximo a vencer -->
    <Color x:Key="ErrorColor">#F44336</Color>
    <!-- Error/vencido -->
    <Color x:Key="InfoColor">#2196F3</Color>
    <!-- Información -->

    <!-- Brushes primarios -->
    <SolidColorBrush x:Key="PrimaryVeryLightBrush" Color="{StaticResource PrimaryVeryLightColor}" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="PrimaryMidBrush" Color="{StaticResource PrimaryMidColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />

    <!-- Brushes de texto -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource DarkColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource MidGrayColor}" />
    <SolidColorBrush x:Key="TextInvertedBrush" Color="{StaticResource WhiteColor}" />

    <!-- Brushes de fondo -->
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource LightColor}" />
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="BackgroundPrimaryMidBrush" Color="{StaticResource PrimaryMidColor}"/>
    <SolidColorBrush x:Key="BackgroundPrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />

    <!-- Brushes de estado -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />

    <!-- Bordes -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource MidGrayColor}" />

    <!-- Efectos de hover y selección -->
    <SolidColorBrush x:Key="HoverBrush" Color="#10000000" />
    <SolidColorBrush x:Key="SelectedBrush" Color="#20000000" />
</ResourceDictionary>