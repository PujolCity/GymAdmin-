<Window x:Class="GymAdmin.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymAdmin.Desktop.Views"
        xmlns:viewModels="clr-namespace:GymAdmin.Desktop.ViewModels"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="GymAdmin - Sistema de Gestión para Gimnasios" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="1000"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:InicioViewModel}">
            <local:InicioView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:SociosViewModel}">
            <local:SociosView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:MembresiasViewModel}">
            <local:MembresiasView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:PagosViewModel}">
            <local:PagosView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:ConfigViewModel}">
            <local:ConfiguracionView/>
        </DataTemplate>
    </Window.Resources>

    <Border CornerRadius="10" 
            BorderThickness="1">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!--Navigation Menu-->
                <ColumnDefinition Width="250"/>
                <!--Content Section-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel lateral de navegación -->
            <Border Grid.Column="0" 
                    CornerRadius="10,0,0,10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <!--Logo-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="10,25,0,40">

                        <TextBlock Text="GymAdmin"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextInvertedBrush}"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    <!--Menu Butons-->
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource TextInvertedBrush}"
                                 Command="{Binding ShowInicioViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Text="Inicio" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource TextInvertedBrush}"
                                 Command="{Binding ShowSociosViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="UserCircle" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Text="Socios" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource TextInvertedBrush}"
                                 Command="{Binding ShowPagosViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="CreditCard" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Text="Pagos" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource TextInvertedBrush}"
                                 Command="{Binding ShowMembresiasViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="CalendarCheck" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Text="Membresías" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource TextInvertedBrush}"
                                 Command="{Binding ShowConfigViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Cog" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Text="Configuración" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>

            <!--Main Section-->
            <Border Grid.Column="1"
                    CornerRadius="0,10,10,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,2" EndPoint="0,0">
                        <GradientStop Color="{StaticResource LightColor}" Offset="1"/>
                        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Barra de Control-->
                        <RowDefinition Height="25"/>
                        <!--Header-->
                        <RowDefinition Height="35"/>
                        <!--Content-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Barra de control personalizada -->
                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">

                        <Button x:Name="btnClose"
                                Style="{StaticResource barButton}"
                                Tag="{StaticResource TextInvertedBrush}"
                                Click="btnClose_Click">
                            <fa:IconImage Icon="Xmark" 
                                          Style="{StaticResource barButtonIcon}"/>
                        </Button>
                        <Button x:Name="btnMaximize"
                                Style="{StaticResource barButton}"
                                Tag="{StaticResource TextInvertedBrush}"
                                Click="btnMaximize_Click">
                            <fa:IconImage Icon="WindowMaximize" 
                                            Style="{StaticResource barButtonIcon}"/>
                        </Button>
                        <Button x:Name="btnMinimize"
                                Style="{StaticResource barButton}"
                                Tag="{StaticResource TextInvertedBrush}"
                                Click="btnMinimize_Click">
                            <fa:IconImage Icon="WindowMinimize" 
                                          Style="{StaticResource barButtonIcon}"/>
                        </Button>
                    </StackPanel >

                    <!--HEADER PERSONALIZADO-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition>
                            </ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Captions-->
                        <StackPanel
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <fa:IconImage Icon="{Binding Icon}"
                                          Height="20"
                                          Width="20"
                                          Foreground="{StaticResource BackgroundPrimaryMidBrush}"
                                          Margin="35,0,10,0"/>
                            <TextBlock Text="{Binding Caption}"
                                       Foreground="{StaticResource BackgroundPrimaryMidBrush}"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"></TextBlock>
                        </StackPanel>

                        <!--User Options-->
                        <!--<StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">
                            <Button Style="{StaticResource iconButton}"
                                    Tag="{StaticResource BackgroundPrimaryMidBrush}">
                                <fa:IconImage Icon="AngleDown" Style="{StaticResource iconButtonIcon}"/>
                            </Button>
                            <TextBlock></TextBlock>
                        </StackPanel>-->
                    </Grid>
                    
                    <!--CONTENIDO-->
                    <Grid Grid.Row="2"
                          Margin="10">
                        <ContentControl Content="{Binding CurrentChildView}"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>